<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.

    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme1" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <!-- Dialog -->
    <style name="dialog_loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="edit_AlertDialog_style" parent="@android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item><!--边框-->
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item> <!--是否启用标题栏-->
    <item name="android:background">@drawable/linearlayout</item>
    <item name="android:windowBackground">@color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item> <!--是否使用背景半透明-->
	</style>
    
    <!-- 弹出对话框的样式 -->
    <style name="dialog_alert" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 弹出时间选择框样式 -->
    <style name="myDialogTimePageStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">44px</item>
        <item name="android:layout_marginBottom">44px</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <!-- 时间选择框里的分割线 -->
    <style name="order_line">
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">5px</item>
    </style>
    <style name="divide_order_line" parent="@style/order_line">
        <item name="android:background">@drawable/dialogline</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/height_2_1000</item>
    </style>

    <!-- TextView -->
    <style name="tv_mini">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/gray_deep</item>
    </style>

    <style name="tv_small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_deep</item>
    </style>

    <style name="tv_default">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_deep</item>
    </style>

    <style name="tv_medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray_deep</item>
    </style>

    <style name="tv_large">
        <item name="android:textSize">27sp</item>
        <item name="android:textColor">@color/gray_deep</item>
    </style>

    <!-- button -->
    <style name="btn_gray_medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_shape_btn_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">8dip</item>
    </style>

    <style name="btn_green_medium">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/selector_shape_btn_green</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <item name="android:paddingTop">8dip</item>
    </style>
    
    <style name="myDialogLayoutDimensions">
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10px</item>
    </style>
	
     <!--  checkbox style --> 
     <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">  
   	 	<item name="android:button">@drawable/checkbox_style</item>  
	</style>
	<style name="IB_login">
        <item name="android:button">@drawable/btn_login</item>
    </style>
    
	
	<style mce_bogus="1" name="PopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/main_menu_pop_anim1</item>
        <item name="android:windowExitAnimation">@anim/main_menu_pop_anim</item>
    </style>
    
	 <style name="AppTheme" parent="android:Theme.Light" />

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="DialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/AnimBottom</item>
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>
</resources>