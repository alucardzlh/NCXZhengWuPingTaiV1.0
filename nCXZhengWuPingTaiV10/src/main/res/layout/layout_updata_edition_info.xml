<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            style="@style/tv_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/updata_edition_info"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_1_100"
            android:layout_marginRight="@dimen/height_2_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/shengfenzhenghao"
                android:textColor="@color/black"
                android:textSize="@dimen/text_middle_size" />

            <EditText
                android:id="@id/edt_shengfenzhenghao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@drawable/bg_edit"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/height_1_100"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_1_100"
            android:layout_marginRight="@dimen/height_2_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhengzhaomingchen"
                android:textColor="@color/black"
                android:textSize="@dimen/text_middle_size" />

            <EditText
                android:id="@id/edt_zhengzhaomingchen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@drawable/bg_edit"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/height_1_100"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_1_100"
            android:layout_marginRight="@dimen/height_2_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/zhengzhaohaoma"
                android:textColor="@color/black"
                android:textSize="@dimen/text_middle_size" />

            <EditText
                android:id="@id/edt_zhengzhaohaoma"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@drawable/bg_edit"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/height_1_100"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_1_100"
            android:layout_marginRight="@dimen/height_2_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/fazhengjiguan"
                android:textColor="@color/black"
                android:textSize="@dimen/text_middle_size" />

            <EditText
                android:id="@id/edt_fazhengjiguan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@drawable/bg_edit"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/height_1_100"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_1_100"
            android:layout_marginRight="@dimen/height_2_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/youxiaoqixian"
                android:textColor="@color/black"
                android:textSize="@dimen/text_middle_size" />

            <EditText
                android:id="@id/edt_youxiaoqixian"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:background="@drawable/bg_edit"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/height_1_100"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_2_100"
            android:layout_marginRight="@dimen/height_2_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="@string/edition_beizhu"
                android:textColor="@color/black"
                android:textSize="@dimen/text_small_size" />

            <EditText
                android:id="@id/edt_edition_beizhu"
                android:layout_width="match_parent"
                android:minHeight="@dimen/height_20_100"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/height_2_100"
                android:layout_marginLeft="@dimen/height_1_100"
                android:layout_marginRight="@dimen/height_1_100"
                android:background="@drawable/bg_edit_big"
                android:gravity="top"
                android:maxWidth="@dimen/width_88_100"
                android:padding="@dimen/height_1_100" />
        </LinearLayout>

       

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_1_100"
            android:layout_marginLeft="@dimen/height_4_100"
            android:layout_marginRight="@dimen/height_4_100"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <Button
                android:id="@id/btn_baocun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_2_100"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:paddingBottom="@dimen/height_1_100"
                android:text="@string/baocun"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@id/btn_quxiao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_2_100"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:paddingBottom="@dimen/height_1_100"
                android:text="@string/cancel"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>