<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_half"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@id/tvTitle"
            style="@style/tv_medium"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_1"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/zhengzhaobanben"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_margin="2dip"
            android:layout_weight="1"
            android:background="@color/gray_line"
            android:orientation="vertical"
            android:padding="2dip" >

            <ListView
                android:id="@id/lv_sjdj_chiocePIC"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:cacheColorHint="@color/transparent"
                android:divider="@drawable/bg_divider"
                android:fadingEdge="none"
                android:listSelector="@color/transparent" />
        </LinearLayout>

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_1_100"
            android:layout_marginLeft="@dimen/height_4_100"
            android:layout_marginRight="@dimen/height_4_100"
            android:gravity="bottom|center"
            android:orientation="horizontal" >

            <Button
                android:id="@id/btnCancle_pop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/height_2_100"
                android:background="@drawable/custom_button"
                android:gravity="center"
                android:paddingBottom="@dimen/height_1_100"
                android:text="@string/cancel"
                android:textColor="#FFFFFF" />
            
        </LinearLayout>
