<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/search_rll6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/height_1_100"
    android:layout_marginRight="@dimen/height_2_100"
    android:layout_marginTop="@dimen/height_1_100"
    android:background="@color/white"
    android:orientation="horizontal" >

    <TextView
        android:id="@id/tv_beizhu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0.95"
        android:gravity="center"
        android:text="@string/search_shenqingriqi"
        android:textColor="@color/black"
        android:textSize="@dimen/text_middle_size" />

    <ImageView
        android:id="@+id/iv_icon3"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_1_100"
        android:layout_marginTop="@dimen/height_2_100"
        android:layout_weight="0.05"
        android:background="@drawable/icon_not_null"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@id/search_rll_shenqingriqi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_1_100"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/tv_search_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:text="11112222"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:background="@drawable/bg_edit"
            android:paddingLeft="@dimen/height_1_100"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/height_1_100"
            android:layout_weight="1.1"
            android:background="@drawable/btn_date_checks"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</LinearLayout>