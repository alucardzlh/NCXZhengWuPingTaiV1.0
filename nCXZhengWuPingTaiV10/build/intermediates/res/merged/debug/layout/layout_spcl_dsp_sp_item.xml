        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_1_100"
        android:layout_marginRight="@dimen/height_2_100"
        android:layout_marginTop="@dimen/height_2_100"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/search_apply_name"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />

        <TextView
            android:id="@id/tv_search_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/height_1_100"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/search_rll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_1_100"
        android:layout_marginRight="@dimen/height_2_100"
        android:layout_marginTop="@dimen/height_2_100"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/search_shenqingriqi_"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />

        <TextView
            android:id="@id/tv_search_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/bg_edit"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/height_1_100"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />
    </LinearLayout>

    
         <LinearLayout
        android:id="@id/search_rll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_1_100"
        android:layout_marginRight="@dimen/height_2_100"
        android:layout_marginTop="@dimen/height_2_100"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:text="@string/shangchuanshenhejieguo"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="0.2"
            android:background="@drawable/btn_uploads"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:text="@string/shangchuan"
            android:textColor="@color/blue_2"
            android:textSize="@dimen/text_middle_size" />
        
                <Button
                    android:id="@+id/btn_chakan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/height_3_100"
            android:layout_gravity="left|center"
            android:layout_weight="0.3"
            android:background="@drawable/btn_search_fj"
            android:gravity="center" />

    </LinearLayout>
    

    <LinearLayout
        android:id="@id/search_rll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_1_100"
        android:layout_marginRight="@dimen/height_2_100"
        android:layout_marginTop="@dimen/width_2_100"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/banliriqi"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />

        <LinearLayout
            android:id="@id/search_rll_shenqingriqi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="horizontal" >

            <TextView
                android:id="@id/tv_search_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="@drawable/bg_edit"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/height_1_100"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_middle_size" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/height_1_100"
                android:layout_weight="1.1"
                android:background="@drawable/btn_date_checks"
                android:contentDescription="@string/app_name" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@id/search_rll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_1_100"
        android:layout_marginRight="@dimen/height_2_100"
        android:layout_marginTop="@dimen/height_2_100"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.95"
            android:gravity="right|center_vertical"
            android:text="@string/zuochujueding"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />

        <ImageView
            android:id="@+id/iv_icon1"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_1_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:layout_weight="0.05"
            android:background="@drawable/icon_not_null"
            android:visibility="visible" />

        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/width_2_100"
            android:layout_weight="2"
            android:checkedButton="@+id/first"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:button="@drawable/radiobutton_style"
                android:text="@string/shenhetongguo"
                android:textColor="@color/black"
                android:textSize="@dimen/text_smaller_size" />

            <RadioButton
                android:id="@+id/second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:button="@drawable/radiobutton_style"
                android:text="@string/shenhebutongguo"
                android:textColor="@color/black"
                android:textSize="@dimen/text_smaller_size" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/height_2_100"
        android:layout_marginRight="@dimen/height_2_100"
        android:layout_marginTop="@dimen/height_2_100"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:gravity="left|center_vertical"
            android:text="@string/tianxieyijian"
            android:textColor="@color/blue_2"
            android:textSize="@dimen/text_small_size" />

        <ImageView
            android:id="@+id/iv_icon2"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_1_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:layout_weight="0.05"
            android:background="@drawable/icon_not_null"
            android:visibility="visible" />

        <EditText
            android:id="@id/edt_search_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/height_2_100"
            android:layout_marginLeft="@dimen/height_1_100"
            android:layout_marginRight="@dimen/height_1_100"
            android:layout_marginTop="@dimen/height_2_100"
            android:layout_weight="2"
            android:text="经审核，同意！"
            android:background="@drawable/bg_edit_big"
            android:gravity="top"
            android:minHeight="@dimen/height_30_100"
            android:padding="@dimen/height_1_100"
            android:textColor="@color/black"
            android:textSize="@dimen/text_middle_size" />
