    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/height_1_100"
        android:layout_marginLeft="@dimen/height_4_100"
        android:layout_marginRight="@dimen/height_4_100"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <Button
            android:id="@id/btn_list_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_2_100"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:paddingBottom="@dimen/height_1_100"
            android:text="@string/fanhui"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@id/btn_list_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/height_2_100"
            android:layout_weight="2"
            android:background="@drawable/custom_button"
            android:gravity="center"
            android:paddingBottom="@dimen/height_1_100"
            android:text="@string/wanchengjinruxiayihuanjie"
            android:textColor="#FFFFFF" />
    </LinearLayout>

